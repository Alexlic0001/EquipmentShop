@model EquipmentShop.Controllers.AccountController.UserOrderDetailsViewModel
@using EquipmentShop.Core.Enums

@{
    ViewData["Title"] = $"Заказ {Model.OrderNumber}";
    Layout = "_Layout";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Profile">Профиль</a></li>
            <li class="breadcrumb-item"><a asp-action="Orders">Мои заказы</a></li>
            <li class="breadcrumb-item active">@Model.OrderNumber</li>
        </ol>
    </nav>

    <h2>Заказ @Model.OrderNumber</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Позиции заказа</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Товар</th>
                                <th>Кол-во</th>
                                <th>Цена</th>
                                <th>Итого</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@($"{item.Price:N0} р.")</td>
                                    <td>@($"{item.Total:N0} р.")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Информация о заказе</h5>
                </div>
                <div class="card-body">
                    <p><strong>Дата:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
                    <p>
                        <strong>Статус:</strong>
                        @switch (Model.Status)
                        {
                            case OrderStatus.Pending:
                                <span class="badge bg-warning">В обработке</span>
                                break;
                            case OrderStatus.Delivered:
                                <span class="badge bg-success">Доставлен</span>
                                break;
                            default:
                                @Model.Status.ToString()
                                break;
                        }
                    </p>
                    <p><strong>Адрес доставки:</strong><br>@Model.ShippingAddress</p>
                    <hr>
                    <p class="h5 mb-0">Итого: <strong>@($"{Model.Total:N0} р.")</strong></p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Orders" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Все заказы
        </a>
    </div>
</div>