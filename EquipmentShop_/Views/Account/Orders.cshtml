@model List<EquipmentShop.Controllers.AccountController.UserOrderViewModel>
@using EquipmentShop.Core.Enums

@{
    ViewData["Title"] = "Мои заказы";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Мои заказы</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-shopping-cart me-2"></i>
            У вас пока нет заказов.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Номер заказа</th>
                        <th>Дата</th>
                        <th>Товаров</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                            <td>@order.ItemCount</td>
                            <td>@($"{order.Total:N0} р.")</td>
                            <td>
                                @{
                                    var badgeClass = order.Status switch
                                    {
                                        OrderStatus.Delivered => "bg-success",
                                        OrderStatus.Cancelled or OrderStatus.Refunded => "bg-danger",
                                        OrderStatus.Pending or OrderStatus.AwaitingPayment => "bg-secondary",
                                        OrderStatus.Processing or OrderStatus.Paid or OrderStatus.Shipped => "bg-warning text-dark",
                                        OrderStatus.OnHold => "bg-info",
                                        _ => "bg-light text-dark"
                                    };
                                }
                                <span class="badge @badgeClass">@order.StatusDisplay</span>
                            </td>
                            <td>
                                <a asp-controller="Account" asp-action="OrderDetails" asp-route-orderNumber="@order.OrderNumber"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> Подробнее
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Profile" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад в профиль
        </a>
    </div>
</div>