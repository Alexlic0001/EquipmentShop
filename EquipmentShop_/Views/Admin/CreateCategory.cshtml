@model EquipmentShop.Core.Entities.Category
@{
    ViewData["Title"] = "Добавление категории";
    Layout = "_Layout";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Админ-панель</a></li>
            <li class="breadcrumb-item"><a asp-action="Categories">Категории</a></li>
            <li class="breadcrumb-item active" aria-current="page">Добавление категории</li>
        </ol>
    </nav>

    <h1>Добавление категории</h1>

    <form asp-action="CreateCategory" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Основная информация</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название категории *</label>
                            <input asp-for="Name" class="form-control" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Slug" class="form-label">URL-адрес (slug)</label>
                            <input asp-for="Slug" class="form-control">
                            <small class="text-muted">Оставьте пустым для автоматической генерации</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Настройки отображения</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DisplayOrder" class="form-label">Порядок отображения</label>
                                <input asp-for="DisplayOrder" class="form-control" type="number" value="0">
                                <small class="text-muted">Меньшее число = выше в списке</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="IconClass" class="form-label">Иконка</label>
                                <input asp-for="IconClass" class="form-control" value="bi bi-folder">
                                <small class="text-muted">Классы иконок Bootstrap Icons</small>
                            </div>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="ShowInMenu" class="form-check-input" checked>
                            <label asp-for="ShowInMenu" class="form-check-label">
                                Показывать в меню
                            </label>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="ShowOnHomepage" class="form-check-input">
                            <label asp-for="ShowOnHomepage" class="form-check-label">
                                Показывать на главной странице
                            </label>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" checked>
                            <label asp-for="IsActive" class="form-check-label">
                                Активная категория
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Изображение категории</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Загрузить изображение</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*">
                            <small class="text-muted">Рекомендуемый размер: 400x400px</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Или URL изображения</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="/images/categories/default.jpg">
                        </div>

                        <div class="text-center">
                            <img id="imagePreview" src="/images/categories/default.jpg" class="img-fluid rounded" style="max-height: 150px;" alt="Превью">
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Родительская категория</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="ParentCategoryId" class="form-label">Родительская категория</label>
                            <select asp-for="ParentCategoryId" class="form-select">
                                <option value="">Нет (основная категория)</option>
                                @foreach (var parentCategory in ViewBag.ParentCategories as List<EquipmentShop.Core.Entities.Category>)
                                {
                                    <option value="@parentCategory.Id">@parentCategory.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">SEO оптимизация</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="MetaTitle" class="form-label">Meta Title</label>
                            <input asp-for="MetaTitle" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label asp-for="MetaDescription" class="form-label">Meta Description</label>
                            <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Сохранить категорию
            </button>
            <a asp-action="Categories" class="btn btn-secondary">
                <i class="fas fa-times"></i> Отмена
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Превью изображения при выборе файла
        document.querySelector('input[name="imageFile"]').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Генерация slug из названия
        document.getElementById('Name').addEventListener('blur', function() {
            const slugInput = document.getElementById('Slug');
            if (!slugInput.value) {
                const slug = this.value
                    .toLowerCase()
                    .replace(/[^\w\s-]/g, '')
                    .replace(/[\s_-]+/g, '-')
                    .replace(/^-+|-+$/g, '');
                slugInput.value = slug;
            }
        });
    </script>
}