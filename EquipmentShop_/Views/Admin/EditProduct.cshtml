<!-- EquipmentShop/Views/Admin/EditProduct.cshtml -->
@model EquipmentShop.Core.Entities.Product
@{
    ViewData["Title"] = "Редактирование товара";
    Layout = "_Layout";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Админ-панель</a></li>
            <li class="breadcrumb-item"><a asp-action="Products">Товары</a></li>
            <li class="breadcrumb-item"><a asp-action="ProductDetails" asp-route-id="@Model.Id">@Model.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
        </ol>
    </nav>
    <h1>Редактирование товара: @Model.Name</h1>

    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="row">
            <div class="col-md-8">
                <!-- Основная информация -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">Основная информация</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Название товара *</label>
                            <input name="Name" class="form-control" value="@Model.Name" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">URL-адрес (slug)</label>
                            <input name="Slug" class="form-control" value="@Model.Slug" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Краткое описание</label>
                            <textarea name="ShortDescription" class="form-control" rows="2">@Model.ShortDescription</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Полное описание *</label>
                            <textarea name="Description" class="form-control" rows="6" required>@Model.Description</textarea>
                        </div>
                    </div>
                </div>

                <!-- Цена и наличие -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">Цена и наличие</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Цена *</label>
                                <input name="Price" class="form-control" type="number" step="0.01" value="@Model.Price" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Старая цена</label>
                                <input name="OldPrice" class="form-control" type="number" step="0.01" value="@Model.OldPrice?.ToString()" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Количество на складе *</label>
                                <input name="StockQuantity" class="form-control" type="number" min="0" value="@Model.StockQuantity" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="формат">Минимальный запас</label>
                                <input name="MinStockThreshold" class="form-control" type="number" min="0" value="@Model.MinStockThreshold" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Характеристики -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">Технические характеристики</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Бренд</label>
                            <input name="Brand" class="form-control" value="@Model.Brand" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Теги (через запятую)</label>
                            <input name="TagsString" class="form-control" value="@Model.TagsString" placeholder="игровой, ноутбук, rtx" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Изображение -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">Изображение товара</h5></div>
                    <div class="card-body">
                        <img src="@Model.ImageUrl" class="img-fluid rounded mb-2" style="max-height:200px;" />
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>
                </div>

                <!-- Категория -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">Категория</h5></div>
                    <div class="card-body">
                        <select name="CategoryId" class="form-select" required>
                            <option value="">Выберите категорию</option>
                            @foreach (var cat in ViewBag.Categories as List<EquipmentShop.Core.Entities.Category>)
                            {
                                <option value="@cat.Id" selected="@(Model.CategoryId == cat.Id)">@cat.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Отображение -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">Настройки отображения</h5></div>
                    <div class="card-body">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="IsFeatured" id="IsFeatured" @(Model.IsFeatured ? "checked" : "") />
                            <label class="form-check-label" for="IsFeatured">Рекомендуемый</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="IsNew" id="IsNew" @(Model.IsNew ? "checked" : "") />
                            <label class="form-check-label" for="IsNew">Новинка</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="IsAvailable" id="IsAvailable" @(Model.IsAvailable ? "checked" : "") />
                            <label class="form-check-label" for="IsAvailable">Доступен для продажи</label>
                        </div>
                    </div>
                </div>

                <!-- SEO -->
                <div class="card mb-3">
                    <div class="card-header"><h5 class="mb-0">SEO</h5></div>
                    <div class="card-body">
                        <input name="MetaTitle" class="form-control mb-2" placeholder="Meta Title" value="@Model.MetaTitle" />
                        <textarea name="MetaDescription" class="form-control mb-2" placeholder="Meta Description" rows="2">@Model.MetaDescription</textarea>
                        <input name="MetaKeywords" class="form-control" placeholder="Meta Keywords" value="@Model.MetaKeywords" />
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Сохранить изменения
            </button>
            <a asp-action="ProductDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>