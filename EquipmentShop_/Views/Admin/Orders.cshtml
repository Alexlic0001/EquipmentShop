@using EquipmentShop.Core.Constants
@model IEnumerable<EquipmentShop.Core.Entities.Order>
@{
    ViewData["Title"] = "Управление заказами";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>Управление заказами</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            Заказы не найдены
        </div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Клиент</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Дата</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderNumber</td>
                            <td>@order.CustomerName</td>
                            <td>@order.Total.ToString("N0")@AppConstants.CurrencySymbol</td>
                            <td>
                                @if (order.Status == EquipmentShop.Core.Enums.OrderStatus.Delivered)
                                {
                                    <span class="badge bg-success">Доставлен</span>
                                }
                                else if (order.Status == EquipmentShop.Core.Enums.OrderStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Отменен</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">@order.Status.ToString()</span>
                                }
                            </td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="OrderDetails" asp-route-id="@order.Id"
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>