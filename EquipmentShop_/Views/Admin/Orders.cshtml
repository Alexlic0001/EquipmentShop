@using EquipmentShop.Core.Constants
@using EquipmentShop.Core.Enums
@model IEnumerable<EquipmentShop.Core.Entities.Order>
@{
    ViewData["Title"] = "Управление заказами";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>Управление заказами</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            Заказы не найдены
        </div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Номер</th>
                        <th>Клиент</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Дата</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td><strong>@order.OrderNumber</strong></td>
                            <td>@order.CustomerName</td>
                            <td>@order.Total.ToString("N0")@AppConstants.CurrencySymbol</td>
                            <td>
                                @{
                                    var statusName = order.Status switch
                                    {
                                        OrderStatus.Pending => "Ожидает обработки",
                                        OrderStatus.Processing => "В обработке",
                                        OrderStatus.AwaitingPayment => "Ожидает оплаты",
                                        OrderStatus.Paid => "Оплачен",
                                        OrderStatus.Shipped => "Передан в доставку",
                                        OrderStatus.Delivered => "Доставлен",
                                        OrderStatus.Cancelled => "Отменен",
                                        OrderStatus.Refunded => "Возврат",
                                        OrderStatus.OnHold => "На удержании",
                                        _ => order.Status.ToString()
                                    };

                                    var badgeClass = order.Status switch
                                    {
                                        OrderStatus.Delivered => "bg-success",
                                        OrderStatus.Cancelled or OrderStatus.Refunded => "bg-danger",
                                        OrderStatus.Pending or OrderStatus.AwaitingPayment => "bg-secondary",
                                        OrderStatus.Processing or OrderStatus.Paid or OrderStatus.Shipped => "bg-warning text-dark",
                                        OrderStatus.OnHold => "bg-info",
                                        _ => "bg-light text-dark"
                                    };
                                }
                                <span class="badge @badgeClass">@statusName</span>
                            </td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @* <!-- Кнопка просмотра деталей -->
                                <a asp-action="OrderDetails"
                                   asp-route-id="@order.Id"
                                   class="btn btn-sm btn-info me-1"
                                   title="Просмотр">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <!-- Кнопка изменения статуса -->
                                <a asp-controller="Admin"
                                   asp-action="ChangeOrderStatus"
                                   asp-route-orderNumber="@order.OrderNumber"
                                   class="btn btn-sm btn-warning"
                                   title="Изменить статус">
                                    <i class="fas fa-edit"></i>
                                </a> *@


                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info me-1" title="Просмотр">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="Admin" asp-action="ChangeOrderStatus" asp-route-orderNumber="@order.OrderNumber" class="btn btn-sm btn-warning me-1" title="Изменить статус">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- НОВАЯ КНОПКА УДАЛЕНИЯ -->
                                <form asp-action="DeleteOrder" asp-controller="Admin" asp-route-id="@order.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="btn btn-sm btn-danger"
                                            title="Удалить заказ"
                                            onclick="return confirm('Вы уверены, что хотите удалить заказ @order.OrderNumber? Это действие нельзя отменить!');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>