@model EquipmentShop.Core.Entities.Product
@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Админ-панель</a></li>
            <li class="breadcrumb-item"><a asp-action="Products">Товары</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>

        <div class="col-md-8">
            <h1>@Model.Name</h1>

            <div class="mb-3">
                <span class="h3 text-primary">@Model.Price.ToString("C0")</span>
                @if (Model.OldPrice.HasValue)
                {
                    <span class="text-muted text-decoration-line-through ms-2">
                        @Model.OldPrice.Value.ToString("C0")
                    </span>
                }
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Информация о товаре</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td><strong>ID:</strong></td>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <td><strong>Категория:</strong></td>
                            <td>@Model.Category?.Name</td>
                        </tr>
                        <tr>
                            <td><strong>Бренд:</strong></td>
                            <td>@Model.Brand</td>
                        </tr>
                        <tr>
                            <td><strong>Наличие:</strong></td>
                            <td>
                                @if (Model.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">@Model.StockQuantity шт.</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Нет в наличии</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Рейтинг:</strong></td>
                            <td>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas @(i <= Model.Rating ? "fa-star" : "fa-star-o") text-warning"></i>
                                }
                                <span class="ms-2">(@Model.ReviewsCount отзывов)</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Продано:</strong></td>
                            <td>@Model.SoldCount шт.</td>
                        </tr>
                        <tr>
                            <td><strong>Дата создания:</strong></td>
                            <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="EditProduct" asp-route-id="@Model.Id"
                   class="btn btn-warning">
                    <i class="fas fa-edit"></i> Редактировать
                </a>
                <a asp-action="Products" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
            </div>
        </div>
    </div>
</div>