@model IEnumerable<EquipmentShop.Core.Entities.Product>
@{
    ViewData["Title"] = "Управление товарами";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>Управление товарами</h1>

    <div class="mt-3">
        <a asp-controller="Products" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Добавить товар
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            Товары не найдены
        </div>
    }
    else
    {
        <div class="table-responsive mt-3">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Изображение</th>
                        <th>Название</th>
                        <th>Цена</th>
                        <th>Наличие</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>
                                <img src="@product.ImageUrl" alt="@product.Name"
                                     style="width: 60px; height: 60px; object-fit: cover;">
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C0")</td>
                            <td>
                                @if (product.StockQuantity > 0)
                                {
                                    <span class="badge bg-success">В наличии: @product.StockQuantity</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Нет в наличии</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ProductDetails" asp-route-id="@product.Id"
                                   class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id"
                                   class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>