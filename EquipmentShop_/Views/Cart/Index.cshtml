@using EquipmentShop.Core.Constants
@model EquipmentShop.Core.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Корзина покупок";
    Layout = "_Layout";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="container py-5">
        <div class="alert alert-warning">
            <div class="text-center py-5">
                <i class="fas fa-exclamation-triangle fa-4x text-warning mb-3"></i>
                <h3>Требуется авторизация</h3>
                <p class="text-muted">Для доступа к корзине необходимо войти в систему</p>
                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Login"
                       asp-route-returnUrl="@Url.Action("Index", "Cart")"
                       class="btn btn-primary me-3">
                        <i class="fas fa-sign-in-alt"></i> Войти
                    </a>
                    <a asp-controller="Account" asp-action="Register"
                       class="btn btn-outline-primary">
                        <i class="fas fa-user-plus"></i> Зарегистрироваться
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container py-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
                <li class="breadcrumb-item active" aria-current="page">Корзина</li>
            </ol>
        </nav>

        <h1 class="mb-4">Корзина покупок</h1>

        @if (Model.IsEmpty)
        {
            <div class="alert alert-info">
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                    <h3>Ваша корзина пуста</h3>
                    <p class="text-muted">Добавьте товары из каталога</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-shopping-bag"></i> Перейти к покупкам
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">
                    <!-- ... существующий код списка товаров ... -->
                    <!-- (оставьте как есть до блока "Итого") -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Товары в корзине (@Model.Items.Count)</h5>
                                <small class="text-muted">Корзина ID: @Model.CartId</small>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 40%;">Товар</th>
                                            <th style="width: 15%;">Цена</th>
                                            <th style="width: 20%;" class="text-center">Количество</th>
                                            <th style="width: 15%;">Сумма</th>
                                            <th style="width: 10%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="@item.ImageUrl"
                                                             class="img-thumbnail me-3"
                                                             style="width: 60px; height: 60px; object-fit: cover;"
                                                             alt="@item.ProductName">
                                                        <div>
                                                            <a asp-controller="Products"
                                                               asp-action="Details"
                                                               asp-route-id="@item.ProductId"
                                                               class="text-decoration-none text-dark fw-semibold">
                                                                @item.ProductName
                                                            </a>
                                                            @if (!string.IsNullOrEmpty(item.SelectedAttributes))
                                                            {
                                                                <small class="d-block text-muted mt-1">
                                                                    <i class="fas fa-cog"></i> @item.SelectedAttributes
                                                                </small>
                                                            }
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="fw-semibold">@($"{item.Price:N0} р.")</span>
                                                </td>
                                                <td class="align-middle">
                                                    <div class="d-flex justify-content-center align-items-center">
                                                        <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="productId" value="@item.ProductId">
                                                            <button type="submit"
                                                                    name="quantity"
                                                                    value="@(item.Quantity - 1)"
                                                                    class="btn btn-outline-secondary btn-sm @(!item.CanDecrease ? "disabled" : "")"
                                                                    @(!item.CanDecrease ? "disabled" : "")>
                                                                <i class="fas fa-minus"></i>
                                                            </button>
                                                            <input type="number"
                                                                   value="@item.Quantity"
                                                                   min="1"
                                                                   max="@item.MaxQuantity"
                                                                   class="form-control form-control-sm text-center mx-2"
                                                                   style="width: 60px;"
                                                                   readonly>
                                                            <button type="submit"
                                                                    name="quantity"
                                                                    value="@(item.Quantity + 1)"
                                                                    class="btn btn-outline-secondary btn-sm @(!item.CanIncrease ? "disabled" : "")"
                                                                    @(!item.CanIncrease ? "disabled" : "")>
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                    @if (!item.IsAvailable)
                                                    {
                                                        <small class="text-danger d-block text-center mt-1">
                                                            <i class="fas fa-exclamation-circle"></i> Нет в наличии
                                                        </small>
                                                    }
                                                </td>
                                                <td class="align-middle fw-bold">@($"{item.TotalPrice:N0} р.")</td>
                                                <td class="align-middle">
                                                    <form asp-action="RemoveFromCart" method="post"
                                                          onsubmit="return confirm('Удалить товар из корзины?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="productId" value="@item.ProductId">
                                                        <button type="submit" class="btn btn-link text-danger" title="Удалить">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left"></i> Продолжить покупки
                                </a>
                                <form asp-action="ClearCart" method="post"
                                      onsubmit="return confirm('Вы действительно хотите очистить всю корзину?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="fas fa-trash-alt"></i> Очистить корзину
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm sticky-top" style="top: 20px;">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Итого</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Товары (@Model.Items.Sum(i => i.Quantity) шт.)</span>
                                <span class="fw-semibold">@($"{Model.Subtotal:N0} р.")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Доставка</span>
                                <span class="fw-semibold @(Model.ShippingCost == 0 ? "text-success" : "")">@(Model.ShippingCost == 0 ? "Бесплатно" : $"{Model.ShippingCost:N0} р.")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>НДС</span>
                                <span class="fw-semibold">@($"{Model.TaxAmount:N0} р.")</span>
                            </div>

                            <div class="alert alert-info mb-3">
                                <small>
                                    <i class="fas fa-info-circle"></i>
                                    @if (Model.Subtotal < 500)
                                    {
                                        <span>Добавьте товаров на @((500 - Model.Subtotal).ToString("N0")) р. для бесплатной доставки!</span>
                                    }
                                    else
                                    {
                                        <span>Ваш заказ оформлен с бесплатной доставкой!</span>
                                    }
                                </small>
                            </div>

                            <hr>

                            <div class="d-flex justify-content-between mb-4">
                                <span class="h5 mb-0">Всего к оплате</span>
                                <span class="h4 text-primary fw-bold">@($"{Model.Total:N0} р.")</span>
                            </div>

                            <!-- ✅ ИСПРАВЛЕНО: НАСТОЯЩАЯ ФОРМА ОФОРМЛЕНИЯ -->
                            <form asp-controller="Cart" asp-action="Checkout" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-check-circle"></i> Подтвердить заказ
                                </button>
                            </form>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt me-1"></i> Безопасная оплата
                                </small>
                                <div class="d-flex justify-content-center gap-2 mt-2">
                                    <i class="fab fa-cc-visa fa-2x text-primary"></i>
                                    <i class="fab fa-cc-mastercard fa-2x text-warning"></i>
                                    <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="alert alert-success">@TempData["Success"]</div>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div class="alert alert-danger">@TempData["Error"]</div>
    </div>
}