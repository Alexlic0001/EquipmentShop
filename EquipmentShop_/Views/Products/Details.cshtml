@using EquipmentShop.Core.Constants

@model EquipmentShop.Core.Entities.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Товары</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>

        <div class="col-md-6">
            <h1>@Model.Name</h1>

            <div class="mb-3">
                <div class="h3 text-primary">@Model.Price.ToString("N0")@AppConstants.CurrencySymbol</div>
                @if (Model.OldPrice.HasValue)
                {
                    <div class="text-muted text-decoration-line-through">Старая цена: @Model.OldPrice.Value.ToString("N0")@AppConstants.CurrencySymbol</div>
                    <div class="text-success">
                        Скидка: @Model.GetDiscountPercentage().ToString("F0")%
                    </div>
                }
            </div>

            <div class="mb-3">
                <div class="text-warning mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas @(i <= Model.Rating ? "fa-star" : "fa-star-o")"></i>
                    }
                    <span class="text-muted ms-2">(@Model.ReviewsCount отзывов)</span>
                </div>
            </div>
            <div class="mb-4">
                @if (Model.StockQuantity > 0)
                {
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@Model.Id">
                            <div class="row g-2">
                                <div class="col-md-3">
                                    <input type="number"
                                           name="quantity"
                                           value="1"
                                           min="1"
                                           max="@Math.Min(Model.StockQuantity, 10)"
                                           class="form-control text-center">
                                </div>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-cart-plus"></i> Добавить в корзину
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <p><i class="fas fa-info-circle"></i> Для добавления товара в корзину необходимо войти в систему</p>
                            <div class="mt-2">
                                <a asp-controller="Account" asp-action="Login"
                                   asp-route-returnUrl="@Url.Action("Details", "Products", new { id = Model.Id })"
                                   class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-sign-in-alt"></i> Войти
                                </a>
                                <a asp-controller="Account" asp-action="Register"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-user-plus"></i> Зарегистрироваться
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-times-circle"></i> Нет в наличии
                    </div>
                }
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Описание</h5>
                </div>
                <div class="card-body">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeQuantity(delta) {
            const input = document.getElementById('quantityInput');
            let quantity = parseInt(input.value) + delta;
            const max = parseInt(input.max);
            const min = parseInt(input.min);

            if (quantity > max) quantity = max;
            if (quantity < min) quantity = min;

            input.value = quantity;
        }
    </script>
}