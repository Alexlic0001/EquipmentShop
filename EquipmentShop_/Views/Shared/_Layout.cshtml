@using EquipmentShop.Core.ViewModels
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EquipmentShop</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .footer {
            margin-top: 2rem;
        }

        .product-card {
            transition: transform 0.3s;
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

        .cart-count {
            font-size: 0.7rem;
            position: relative;
            top: -8px;
        }

        .dropdown-menu-cart {
            min-width: 350px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-laptop"></i> EquipmentShop
                </a>

                <button class="navbar-toggler" type="	button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-shopping-bag"></i> Товары
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i> Корзина
                                </a>
                            </li>
                        }
                    </ul>

                    <form class="d-flex me-3" asp-controller="Products" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="search" placeholder="Поиск товаров...">
                        <button class="btn btn-outline-light" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>

                    <!-- Блок авторизации / профиля -->
                    <div class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Только одна иконка корзины (без дублирования) -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                    <i class="fas fa-shopping-cart"></i>
                                    <span id="cartItemCount" class="badge bg-danger cart-count" style="display: none;">0</span>
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cog"></i> Админка
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                                <i class="fas fa-tachometer-alt"></i> Панель управления
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Products">
                                                <i class="fas fa-box"></i> Товары
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Categories">
                                                <i class="fas fa-folder"></i> Категории
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Orders">
                                                <i class="fas fa-shopping-bag"></i> Заказы
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                                <i class="fas fa-users"></i> Пользователи
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="CreateProduct">
                                                <i class="fas fa-plus"></i> Добавить товар
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="CreateCategory">
                                                <i class="fas fa-folder-plus"></i> Добавить категорию
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-user-circle"></i> Мой профиль
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Cart" asp-action="Index">
                                            <i class="fas fa-shopping-cart"></i> Моя корзина
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <i class="fas fa-history"></i> История заказов
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt"></i> Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Войти
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Регистрация
                                </a>
                            </li>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div class="container mt-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="footer bg-light text-dark py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>EquipmentShop</h5>
                    <p>Интернет-магазин компьютерной техники и комплектующих</p>
                    <p>&copy; @DateTime.Now.Year - EquipmentShop</p>
                </div>
                <div class="col-md-3">
                    <h5>Контакты</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-phone"></i> +375 (29) 123-45-67</li>
                        <li><i class="fas fa-envelope"></i> info@equipmentshop.by</li>
                        <li><i class="fas fa-map-marker-alt"></i> г. Минск</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Меню</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Главная</a></li>
                        <li><a asp-controller="Products" asp-action="Index" class="text-decoration-none">Товары</a></li>
                        <li><a asp-controller="Cart" asp-action="Index" class="text-decoration-none">Корзина</a></li>
                        <li><a href="#" class="text-decoration-none">Контакты</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Обновление количества товаров в корзине
        async function updateCartCount() {
            if (!@Html.Raw(User.Identity?.IsAuthenticated == true ? "true" : "false")) return;

            try {
                const res = await fetch('@Url.Action("GetCartSummary", "Cart")');
                const data = await res.json();
                const el = document.getElementById('cartItemCount');
                if (el) {
                    if (data.itemCount > 0) {
                        el.textContent = data.itemCount;
                        el.style.display = 'inline';
                    } else {
                        el.style.display = 'none';
                    }
                }
            } catch (e) {
                console.error('Не удалось обновить корзину', e);
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateCartCount();

            // Обработчик кнопок "Добавить в корзину"
            document.querySelectorAll('.add-to-cart-btn').forEach(btn => {
                btn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const id = btn.dataset.productId;
                    const qty = document.getElementById(`quantity-${id}`)?.value || 1;

                    const isAuthenticated = @Html.Raw(User.Identity?.IsAuthenticated == true ? "true" : "false");
                    if (!isAuthenticated) {
                        if (confirm('Для добавления в корзину нужно войти. Перейти на страницу входа?')) {
                            sessionStorage.setItem('pendingProductId', id);
                            sessionStorage.setItem('pendingQuantity', qty);
                            window.location.href = '@Url.Action("Login", "Account")?returnUrl=' + encodeURIComponent(location.href);
                        }
                        return;
                    }

                    const formData = new FormData();
                    formData.append('productId', id);
                    formData.append('quantity', qty);
                    const token = document.querySelector('[name="__RequestVerificationToken"]')?.value;
                    if (token) formData.append('__RequestVerificationToken', token);

                    const res = await fetch('@Url.Action("AddToCart", "Cart")', { method: 'POST', body: formData });
                    if (res.ok) {
                        updateCartCount();
                        alert('Товар добавлен в корзину!');
                    } else {
                        alert('Ошибка при добавлении в корзину');
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>